<body>
  <div class="container">
    <h2>Vote for Your Favorite Candidate</h2>
    <form id="voteForm">
      <div class="candidate">
        <input type="radio" id="candidate1" name="candidate" value="Alice">
        <label for="candidate1">Alice</label>
      </div>
      <div class="candidate">
        <input type="radio" id="candidate2" name="candidate" value="Bob">
        <label for="candidate2">Bob</label>
      </div>
      <div class="candidate">
        <input type="radio" id="candidate3" name="candidate" value="Charlie">
        <label for="candidate3">Charlie</label>
      </div>
      <button type="button" onclick="submitVote()">Submit Vote</button>
    </form>
    <div class="result" id="result"></div>
  </div>

  <script>
    function submitVote() {
      const selected = document.querySelector('input[name="candidate"]:checked');
      const resultDiv = document.getElementById("result");

      if (selected) {
        const candidate = selected.value;
        resultDiv.textContent = `You voted for ${candidate}. Thank you!`;

        // Simulate vote submission (to a server)
        console.log(`Vote submitted for: ${candidate}`);
      } else {
        resultDiv.textContent = "Please select a candidate before voting.";
      }
    }
  </script>
